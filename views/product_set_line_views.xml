<odoo>
    <data>
        <record id="view_form_product_set_line" model="ir.ui.view">
            <field name="name">product.set.line.form</field>
            <field name="model">product.set.line</field>
            <field name="arch" type="xml">
                <form string="product line">
                    <sheet>
                        <group>
                            <field name="set_id"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_id"/>
                            <field name="reference_product_set_line"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view for product.set.line -->
        <record id="view_tree_product_set_line" model="ir.ui.view">
            <field name="name">product.set.line.tree</field>
            <field name="model">product.set.line</field>
            <field name="arch" type="xml">
                <tree string="product line">
                    <field name="set_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="unit_id"/>
                    <field name="reference_product_set_line"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>