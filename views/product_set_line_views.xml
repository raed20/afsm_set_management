<odoo>
    <data>
        <record id="view_form_product_set_line" model="ir.ui.view">
            <field name="name">product.set.line.form</field>
            <field name="model">product.set.line</field>
            <field name="arch" type="xml">
                <form string="product line">
                    <sheet>
                        <group>
                            <field name="set_name" string="Product Set"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_id"/>
                            <field name="reference_product_set_line"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view for product.set.line -->
        <record id="view_product_set_line_tree" model="ir.ui.view">
    <field name="name">product.set.line.tree</field>
    <field name="model">product.set.line</field>
    <field name="arch" type="xml">
        <tree string="Product Set Lines">
            <field name="set_name" string="Product Set" />
            <field name="product_id" string="Product" />
            <field name="reference_product_set_line" string="Reference" />
            <field name="quantity" string="Quantity" />
            <field name="unit_id" string="Unit of Measure" />
        </tree>
    </field>
</record>

    </data>
</odoo>