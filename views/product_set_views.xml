<odoo>
    <data>
        <!-- Form View for Product Set -->
        <record id="view_product_set_form" model="ir.ui.view">
            <field name="name">product.set.form</field>
            <field name="model">product.set</field>
            <field name="arch" type="xml">
                <form string="Product Set">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="reference_set"/>
                            <field name="quantity"/>
                        </group>
                        <notebook>
                            <page string="Composants">
                                <field name="lines_ids">
                                    <tree editable="bottom">
                                        <field name="set_name"/>
                                        <field name="product_id"/>
                                        <field name="reference_product_set_line" readonly="1"/>
                                        <field name="quantity"/>
                                        <field name="unit_id"/>
                                    </tree>
                                </field>
                                <button name="action_add_product" string="Add a product" type="object" class="oe_highlight"/>
                                <button name="action_add_product_set" string="Add a set" type="object" class="oe_highlight"/>
                            </page>
                            <page string="Divers">
                                <!-- Other fields can go here -->
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for Product Set -->
        <record id="view_product_set_tree" model="ir.ui.view">
            <field name="name">product.set.tree</field>
            <field name="model">product.set</field>
            <field name="arch" type="xml">
                <tree string="Product Sets">
                    <field name="name"/>
                    <field name="reference_set"/>
                    <field name="quantity"/>
                </tree>
            </field>
        </record>

        <!-- Action for Product Set Views -->
        <record id="action_product_set_views" model="ir.actions.act_window">
            <field name="name">Sets</field>
            <field name="res_model">product.set</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <record id="action_product_set_line_form" model="ir.actions.act_window">
    <field name="name">Product Set Line</field>
    <field name="res_model">product.set.line</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_product_set_line"/>
</record>


        <!-- Menu Items -->
        <menuitem id="menu_product_set" name="Set Management"/>
        <menuitem id="menu_product_set_main" name="Products" parent="menu_product_set"/>
        <menuitem id="menu_product_set_line_main" name="Sets" parent="menu_product_set_main" action="action_product_set_views"/>
    </data>
</odoo>
